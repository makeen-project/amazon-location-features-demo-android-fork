    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_medium_black</item>
    </style>

    <style name="LogOutStyle" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">@style/LogoutTitleStyle</item>
        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">
            @style/LogoutMessageStyle
        </item>
        <!-- Log out button -->
        <item name="buttonBarPositiveButtonStyle">@style/LogoutBtnStyle</item>
        <!-- Log out cancel button -->
        <item name="buttonBarNegativeButtonStyle">@style/LogoutCancelBtnStyle</item>
    </style>

    <style name="EnableTrackerAlertStyle" parent="@style/ThemeOverlay.MaterialComponents.Light">
        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">@style/LogoutTitleStyle</item>
        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">
            @style/LogoutMessageStyle
        </item>
        <!-- Log out button -->
        <item name="buttonBarPositiveButtonStyle">@style/LogoutBtnStyle</item>
        <!-- Log out cancel button -->
        <item name="buttonBarNegativeButtonStyle">@style/LogoutBtnStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/LogoutCancelBtnStyle</item>
    </style>

    <style name="LogoutTitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/amazon_ember_medium</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="LogoutMessageStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="fontFamily">@font/amazon_ember_regular</item>
    </style>

    <style name="LogoutBtnStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/logout_cancel</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LogoutCancelBtnStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/logout_red</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/color_primary_green</item>
        <item name="android:colorForeground">@color/color_primary_green</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
