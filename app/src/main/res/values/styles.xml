    <style name="CardViewTopRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp_8</item>
        <item name="cornerSizeTopLeft">@dimen/dp_8</item>
        <item name="cornerSizeBottomRight">0dp</item>
